#ifndef __OLED_H__
#define __OLED_H__

#include "stm32f1xx_hal.h"

// OLED软件I2C配置
#define OLED_SCL_PORT    GPIOB
#define OLED_SCL_PIN     GPIO_PIN_6
#define OLED_SDA_PORT    GPIOB  
#define OLED_SDA_PIN     GPIO_PIN_7

// GPIO操作宏
#define OLED_SCL_SET()   HAL_GPIO_WritePin(OLED_SCL_PORT, OLED_SCL_PIN, GPIO_PIN_SET)
#define OLED_SCL_RESET() HAL_GPIO_WritePin(OLED_SCL_PORT, OLED_SCL_PIN, GPIO_PIN_RESET)
#define OLED_SDA_SET()   HAL_GPIO_WritePin(OLED_SDA_PORT, OLED_SDA_PIN, GPIO_PIN_SET)
#define OLED_SDA_RESET() HAL_GPIO_WritePin(OLED_SDA_PORT, OLED_SDA_PIN, GPIO_PIN_RESET)

// 简单函数声明
void OLED_Init(void);
void OLED_Clear(void);
void OLED_ShowString(uint8_t x, uint8_t y, char *str);
void OLED_ShowNum(uint8_t x, uint8_t y, uint32_t num);

#endif

